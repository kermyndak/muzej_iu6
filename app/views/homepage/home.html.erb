<% if user_signed_in? %>
    <% if current_user.role == 'admin' %>
      <%= link_to 'admin_profile', '/profile/admin_profile' %>
      <br>
      <%= link_to 'Requests', '/request/admin' %>
    <% end %>
    <br>
    <%= link_to 'send request', '/request/send_request' %>
    <br>
    <%= link_to 'my profile', '/profile/profile' %>
    <%= button_to('Sign out', 'users/sign_out', :method => :delete) %>
<% else %>
    <%= link_to 'login', 'users/sign_in' %>
    <%= link_to 'signup', 'users/sign_up' %>
<% end %>

<% Request.all.each do |request| %>
  <% request.images_blobs.each do |image| %>
    <% if image.success %>
      <%= link_to(image_tag(image), image) %>
    <% end %>
  <% end %>
<% end %>
