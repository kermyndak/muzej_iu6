<%= turbo_frame_tag 'name' do %>
    <%= form_with url: "/profile/update/name/#{@user_id}", method: :put do |form| %>
        <div class="name">
            <%= form.label :name, "Name:" %>
            <%= form.text_field :name, placeholder: "Enter name" %>
        </div>
        <%= form.submit "Сохранить" %>
    <% end %>
<% end %>

