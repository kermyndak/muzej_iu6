<h1>Edit user</h1>
<div class="name">
    <p>Имя: 
        <div id="current_name">
            <%= current_user.name %>
        </div>
    </p>
    <%= turbo_frame_tag 'name' do %>
        <%= link_to 'Изменить', "/profile/change/#{current_user.id}" %>
    <% end %>
</div>
<div class="surname">
    <p>Фамилия: 
        <div id="current_surname">
            <%= current_user.surname %>
        </div>  
    </p>
    <%= turbo_frame_tag 'surname' do %>
        <%= link_to 'Изменить', "/profile/change/#{current_user.id}" %>
    <% end %>
</div>
<div class="middle_name">
    <p>Отчество: 
        <div id="current_middle_name">
            <%= current_user.middle_name %>
        </div>        
    </p>
    <%= turbo_frame_tag 'middle_name' do %>
        <%= link_to 'Изменить', "/profile/change/#{current_user.id}" %>
    <% end %>
</div>
<div class="year">
    <p>Год выпуска: 
        <div id="current_year">
            <%= current_user.year %>
        </div>
    </p>
    <%= turbo_frame_tag 'year' do %>
        <%= link_to 'Изменить', "/profile/change/#{current_user.id}" %>
    <% end %>
</div>
<br>
<%= turbo_frame_tag 'button_delete' do %>
    <%= button_to 'Удалить аккаунт', "/profile/destroy/#{current_user.id}" %>
<% end %>
<br>
<%= link_to 'Back', root_path %>