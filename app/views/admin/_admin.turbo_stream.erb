<%= turbo_stream.update "set_admin_#{@user_id}" do %>
  <% if @user.role == 'user' %>
    <%= button_to 'Назначить администратором', "/set_admin/#{ @user_id }", method: :put, class: "button-white" %>
  <% else %>
    <%= button_to 'Сделать обычным пользователем', "/set_admin/#{ @user_id }", method: :put, class: "button-white" %>
  <% end %>
<% end %>

<%= turbo_stream.update "role_#{@user_id}" do %>
  <% if @user.role == 'user' %>
    user
  <% else %>
    admin
  <% end %>
<% end %>