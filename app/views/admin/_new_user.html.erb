<p>Email: <%= @user.email %></p>
<p>Name: <%= @user.name %></p>
<p>Surname: <%= @user.surname %></p>
<% if @user.middle_name %>
    <p>Middle_name: <%= @middle_name %></p>
<% end %>
<p>Year: <%= @user.year %></p>
<p>Password: <input type="text" id="password<%= @user.id %>" value="<%= @password %>" readonly> <button onclick="copy_text(<%= @user.id %>)">Copy text</button></p>
